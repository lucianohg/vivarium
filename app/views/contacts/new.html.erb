<% provide(:title, 'Contato') %>
<%= render 'layouts/header' %>

<header class="sub-header">
	<div class="container">
		<h1> Fale Conosco</h1>
		<p> Entre em contato e entenda melhor ainda a oportunidade </p>
	</div>
</header>
<div class = "container wrap">
<div class = "row">
<div class = "span4"> </div>
<div class = "span4">
<div class= " contato">
	<%= simple_form_for(@contact, html: {class: 'form-horizontal'}) do |f| %>
		<%= f.input :name, label: 'Nome', :required => true %>
		<%= f.input :email, :required => true %>
		<%= f.input :message, label: 'Mensagem', :as => :text, :required => true, :input_html => {:rows => 10} %>
		<div class = "form-actions">
		<%= f.button :submit, 'Mandar Mensagem', :class => "btn btn-primary" %>
		</div>
	<% end %>
</div>
</div>
</div>
</div>	
